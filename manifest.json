{
    "manifest_version": 2,
    "name": "Hide the Page",
    "version": "1.0.0",
    "description": "This browser extension hides your page if you don't want anyone to see it when they around you.",
    "icons": {
        "16": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
    },
    "browser_action": {
        "default_icon": "img/icon.png",
        "default_popup": "popup.html",
        "icons": ["img/icon.svg"]
    },
    "options_page": "options.html",
    "permissions": [
        "activeTab",
        "tabs",
        "<all_urls>",
        "storage"
    ]
}
